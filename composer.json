{
    "name": "szemul/slim-error-handler-bridge",
    "description": "Slim-error handler bridge",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0",
        "psr/http-server-middleware": "^1.0.1",
        "slim/slim": "^4.8",
        "szemul/error-handler": "^v1.0.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0.0",
        "jetbrains/phpstorm-attributes": "^1.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^0.12.80",
        "phpunit/phpunit": "^9.5.5"
    },
    "autoload": {
        "psr-4": {
            "Szemul\\SlimErrorHandlerBridge\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Szemul\\SlimErrorHandlerBridge\\Test\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
